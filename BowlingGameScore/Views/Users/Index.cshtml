@model BowlingGameScore.ViewModels.UserViewModel
<h4>Frames</h4>
<hr />

<table>
    <tr>
        @for (int i = 0; i <= 9; i++)
        {
            <th colspan="2">Frame @Html.DisplayFor(model => model.Frames[i].FrameCount)</th>
        }
    </tr>
    <tr>
        @for (int i = 0; i <= 9; i++)
        {
            <td>
                @Html.DisplayFor(model => model.Frames[i].FirstDelivery)
            </td>
            <td>
                <h4>
                    @Html.DisplayFor(model => model.Frames[i].StrikeSymbols)
                    @Html.DisplayFor(model => model.Frames[i].SpareSymbols)
                 </h4>
                 @Html.DisplayFor(model => model.Frames[i].SecondDelivery)
            </td>
        }
    </tr>
    <tr>
        @for (int i = 0; i <= 9; i++)
        {
            <td colspan="2">@Html.DisplayFor(model => model.Frames[i].Score)</td>
        }
    </tr>
</table>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Score)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FinalScore)
        </dd>
    </dl>
</div>

<form asp-action="Index">
    <div class="controls">
        <div class="row">
            @for (int i = 0; i <= 9; i++)
            {
                if (i == 9)
                {
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label asp-for="FirstDelivery" class="control-label"></label>
                            <input asp-for="@Model.Frames[i].FirstDelivery" value="0" class="form-control" />
                            <span asp-validation-for="@Model.Frames[i].FirstDelivery" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label asp-for="SecondDelivery" class="control-label"></label>
                            <input type="text" asp-for="@Model.Frames[i].SecondDelivery" value="0" class="form-control" />
                            <span asp-validation-for="@Model.Frames[i].SecondDelivery" class="text-danger"></span>
                        </div>
                    </div>
                }
                else
                {
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label asp-for="FirstDelivery" class="control-label"></label>
                            <input asp-for="@Model.Frames[i].FirstDelivery" value="0" class="form-control" />
                            <span asp-validation-for="@Model.Frames[i].FirstDelivery" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group" id="second">
                            <label asp-for="SecondDelivery" class="control-label"></label>
                            <input asp-for="@Model.Frames[i].SecondDelivery" value="0" class="form-control" />
                            <span asp-validation-for="@Model.Frames[i].SecondDelivery" class="text-danger"></span>
                        </div>
                    </div>
                }
            }
            <div class="col-sm-3">
                <div class="form-group" id="showBonusDelivery">
                    <label asp-for="FirstDelivery" class="control-label"></label>
                    <input type="text" name="firstDelivery" id="firstDelivery" value="0" class="form-control">
                </div>
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Submit" class="btn btn-primary" />
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}