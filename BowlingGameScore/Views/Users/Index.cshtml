@model BowlingGameScore.ViewModels.UserViewModel
<h4>Frames</h4>
<hr />

<form asp-action="Index">
    <div class="controls">
        <div class="row">
            @for (int i = 0; i <= 9; i++)
            {
                if (i == 9)
                {
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label asp-for="FirstDelivery" class="control-label"></label>
                            <input asp-for="@Model.Frames[i].FirstDelivery" value="0" class="form-control" />
                            <span asp-validation-for="@Model.Frames[i].FirstDelivery" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label asp-for="SecondDelivery" class="control-label"></label>
                            <input type="text" asp-for="@Model.Frames[i].SecondDelivery" value="0" class="form-control" />
                            <span asp-validation-for="@Model.Frames[i].SecondDelivery" class="text-danger"></span>
                        </div>
                    </div>
                }
                else
                {
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label asp-for="FirstDelivery" class="control-label"></label>
                            <input asp-for="@Model.Frames[i].FirstDelivery" value="0" class="form-control" />
                            <span asp-validation-for="@Model.Frames[i].FirstDelivery" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group" id="second">
                            <label asp-for="SecondDelivery" class="control-label"></label>
                            <input asp-for="@Model.Frames[i].SecondDelivery" value="0" class="form-control" />
                            <span asp-validation-for="@Model.Frames[i].SecondDelivery" class="text-danger"></span>
                        </div>
                    </div>
                }
            }
            <div class="col-sm-3">
                <div class="form-group" id="showBonusDeliverie">
                    <label asp-for="FirstDelivery" class="control-label"></label>
                    <input type="text" name="firstDeliverie" id="firstDeliverie" value="0" class="form-control">
                </div>
            </div>
            <div class="col-sm-3">
                <div class="form-group" id="showBonusDeliverie2">
                    <label asp-for="SecondDelivery" class="control-label"></label>
                    <input type="text" name="secondDeliverie" id="secondDeliverie" value="0" class="form-control">
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Score)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FinalScore)
        </dd>
    </dl>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}